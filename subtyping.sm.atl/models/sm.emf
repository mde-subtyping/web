@namespace(uri="subtyping.sm", prefix="sm.concepts")
package sm;

class StateMachine {
  attr String name;
  ref State initial;
  ref State[*] final;
  val State[*] nodes;
  val Transition[*] edges;
}

class State {
  attr String name;
  val StateMachine[*] subMachines;
}

class Transition {
  attr String name;
  ref State[1] source;
  ref State[1] target;
  attr Boolean isCompletion;  
}

datatype Boolean : boolean;

datatype Integer : int;

datatype String : java.lang.String;

